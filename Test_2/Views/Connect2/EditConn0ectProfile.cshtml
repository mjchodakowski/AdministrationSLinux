                    @Html.EditorFor(model => model.RootKey, new { htmlAttributes = new { @class = "form-control", @style = "margin:auto" } })
                    @Html.ValidationMessageFor(model => model.RootKey, "", new { @class = "text-danger", @style = "margin:auto" })
                </td>
            </tr>
        </tbody>
    </table>
}
