                    @Html.ValidationMessageFor(model => model.NazwaUser, "", new { @class = "text-danger", @style = "margin:auto" })
                </td>
            </tr>
            <tr>
                <td> @Html.LabelFor(model => model.UserKey, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin:auto" })</td>
