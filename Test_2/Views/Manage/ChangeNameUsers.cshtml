@model Test_2.Models.ChangeNameUserViewModel
@{
    ViewBag.Title = "Zmień hasło";
}

@{
    if (Session["viewbag_error"] != null) { ViewBag.error = Session["viewbag_error"]; ViewBag.error_pomoc = Session["viewbag_error_pomoc"]; }
    if (Session["viewbag_success"] != null) { ViewBag.success = Session["viewbag_success"]; ViewBag.success_pomoc = Session["viewbag_success_pomoc"]; }
    if (Session["viewbag_info"] != null) { ViewBag.info = Session["viewbag_info"]; ViewBag.info_pomoc = Session["viewbag_info_pomoc"]; }

}


@using (Html.BeginForm("ChangeNameUsers", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size:small;" })
    <table class="TableMain" style="margin-left:auto;margin-right:auto;">

        <thead>
            <tr>
                <th colspan="2">Formularz zmiany nazwy uzytkownika</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <th>Bieżące hasło</th>
                <th>@Html.PasswordFor(m => m.OldPassword, new { @class = "w3-input w3-border w3-margin-bottom" })</th>
            </tr>
            <tr>
                <th>Nowa nazwa użytkownika </th>
                <th>@Html.EditorFor(m => m.NameUser, new { @class = "w3-input w3-border w3-margin-bottom" })</th>
            </tr>

            <tr>
                <th>Potwierdzenie nowej nazwy użytkownika</th>
                <th>
                    @Html.EditorFor(m => m.CNameUser, new { @class = "w3-input w3-border w3-margin" })
                    <input type="submit" value="Zmień nazwe/e-mail" class="w3-button w3-green w3-margin-bottom " />
                </th>
            </tr>
        </tbody>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}