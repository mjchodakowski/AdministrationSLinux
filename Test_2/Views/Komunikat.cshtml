@{
    if (Session["viewbag_error"] != null)
    {
        <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Uwaga!</strong> @Session["viewbag_error"];
            <div class="FontMaszyna" style="margin:10px;"> @Session["viewbag_error_pomoc"] </div>
        </div>
        if ((string)Session["viewbag_error"] != "Nie można wysłać pliku poniewaz przekroczyło by to limit dostępnej pamieci!") { Session["viewbag_error"] = null; }
    }

    if (Session["viewbag_success"] != null)
    {
        <div class="alert success">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Success!</strong>  @Session["viewbag_success"]
            <div class="FontMaszyna" style="margin:10px;">@Session["viewbag_success_pomoc"]</div>
        </div>
        Session["viewbag_success"] = null;

    }

    if (Session["viewbag_info"] != null)
    {
        <div class="alert info">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Info! </strong> @Session["viewbag_info"]
            <div class="FontMaszyna" style="margin:10px;">@Session["viewbag_info_pomoc"]</div>
        </div>
        Session["viewbag_info"] = null;
    }
}